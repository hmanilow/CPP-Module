NAME		= ClapTrap

CFLAGS		= -Wall -Wextra -Werror -Wshadow -Wno-shadow -std=c++98
CC			= c++
RM			= rm -f

OBJ			= ${SRC:.cpp=.o}
SRC			= main.cpp \
			  ClapTrap.cpp \
			  ScavTrap.cpp \
			  FragTrap.cpp \
			  DiamondTrap.cpp \

INC			= ClapTrap.hpp \
			  ScavTrap.hpp \
			  FragTrap.hpp \
			  DiamondTrap.hpp \

${NAME}:	${OBJ}
					${CC} ${CFLAGS} ${OBJ} -o $@

%.o:%.cpp ${INC}
					${CC} ${CFLAGS} -c $< -o $@

all:			${NAME}

clean:
					${RM} ${OBJ}

fclean:		clean
					${RM} ${NAME}

re: 			fclean all

.PHONY : 	all clean fclean re